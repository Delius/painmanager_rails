<%= simple_form_for(@mental_state) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :disposition %>
    <%= f.input :stress %>
    <%= f.input :mood_stability %>
    <%= f.association :user %>
    <%= f.association :diary %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
