<p id="notice"><%= notice %></p>

<h1>Listing Mental States</h1>

<table>
  <thead>
    <tr>
      <th>Disposition</th>
      <th>Stress</th>
      <th>Mood stability</th>
      <th>User</th>
      <th>Diary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mental_states.each do |mental_state| %>
      <tr>
        <td><%= mental_state.disposition %></td>
        <td><%= mental_state.stress %></td>
        <td><%= mental_state.mood_stability %></td>
        <td><%= mental_state.user %></td>
        <td><%= mental_state.diary %></td>
        <td><%= link_to 'Show', mental_state %></td>
        <td><%= link_to 'Edit', edit_mental_state_path(mental_state) %></td>
        <td><%= link_to 'Destroy', mental_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

